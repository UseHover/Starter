<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/HoverYellow</item>
        <item name="colorPrimaryDark">@color/HoverOrange</item>
        <item name="colorAccent">@color/HoverOrange</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="SDKTheme" parent="HoverTheme">
        <item name="colorPrimary">@color/HoverYellow</item>
        <item name="colorPrimaryDark">@color/HoverOrange</item>
        <item name="colorAccent">@color/HoverMedBlue</item>
    </style>
</resources>
